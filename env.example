# ARLinguaSphere Environment Configuration
# Copy this file to .env and fill in your actual values

# Firebase Configuration
FIREBASE_PROJECT_ID=arlinguasphere
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=arlinguasphere.firebaseapp.com
FIREBASE_DATABASE_URL=https://arlinguasphere.firebaseio.com
FIREBASE_STORAGE_BUCKET=arlinguasphere.appspot.com

# Google Cloud Translation API
GOOGLE_CLOUD_TRANSLATE_API_KEY=your_google_translate_api_key_here

# OpenAI API (for GPT integration)
OPENAI_API_KEY=your_openai_api_key_here

# Unity License (for CI/CD)
UNITY_LICENSE=your_unity_license_here
UNITY_EMAIL=your_unity_email_here
UNITY_PASSWORD=your_unity_password_here

# Android Signing (for CI/CD)
ANDROID_KEYSTORE_NAME=arlinguasphere.keystore
ANDROID_KEYSTORE_BASE64=your_keystore_base64_here
ANDROID_KEYSTORE_PASS=your_keystore_password_here
ANDROID_KEY_ALIAS=arlinguasphere
ANDROID_KEY_ALIAS_PASS=your_key_alias_password_here

# Analytics
FIREBASE_ANALYTICS_ENABLED=true
FIREBASE_CRASHLYTICS_ENABLED=true

# Debug Settings
DEBUG_MODE=false
LOG_LEVEL=INFO
