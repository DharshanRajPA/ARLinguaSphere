# ARLinguaSphere Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:android:abcdef123456

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_TRANSLATE_API_KEY=your-translate-api-key
GOOGLE_SPEECH_API_KEY=your-speech-api-key

# OpenAI/LLM Configuration (optional)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=150

# Analytics Configuration
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=true

# Development Settings
DEBUG_MODE=false
ENABLE_LOGGING=true
LOG_LEVEL=INFO
MOCK_ML_INFERENCE=false
MOCK_VOICE_RECOGNITION=false

# Build Configuration
BUILD_VERSION=1.0.0
BUILD_NUMBER=1
COMPANY_NAME=ARLinguaSphere
PRODUCT_NAME=ARLinguaSphere
BUNDLE_IDENTIFIER=com.arlinguasphere.app

# Unity Configuration
UNITY_VERSION=2022.3.21f1
TARGET_PLATFORM=Android
MIN_SDK_VERSION=24
TARGET_SDK_VERSION=33

# CI/CD Configuration
GITHUB_TOKEN=your-github-token
UNITY_LICENSE=your-unity-license-content
UNITY_EMAIL=your-unity-account-email
UNITY_PASSWORD=your-unity-account-password

# Distribution Configuration
FIREBASE_APP_ID_ANDROID=your-firebase-app-id-android
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON=path-to-service-account.json
GOOGLE_PLAY_PACKAGE_NAME=com.arlinguasphere.app

# Security Configuration
ENABLE_CODE_OBFUSCATION=true
ENABLE_ANTI_TAMPERING=true
API_RATE_LIMIT=100
SESSION_TIMEOUT=3600

# Performance Configuration
MAX_CONCURRENT_DETECTIONS=5
ML_INFERENCE_TIMEOUT=5000
NETWORK_TIMEOUT=10000
CACHE_SIZE_MB=50

# Feature Flags
ENABLE_MULTIPLAYER=true
ENABLE_VOICE_COMMANDS=true
ENABLE_GESTURE_CONTROLS=true
ENABLE_OFFLINE_MODE=true
ENABLE_ADAPTIVE_LEARNING=true

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,zh,ja,ko,hi
ENABLE_RTL_SUPPORT=false

# Privacy & Compliance
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
DATA_RETENTION_DAYS=365
ENABLE_DATA_EXPORT=true
ENABLE_DATA_DELETION=true

# Monitoring & Alerting
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_ALERTS=true
ALERT_EMAIL=alerts@arlinguasphere.com
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Testing Configuration
ENABLE_UNIT_TESTS=true
ENABLE_INTEGRATION_TESTS=true
ENABLE_UI_TESTS=true
TEST_COVERAGE_THRESHOLD=80

# Model Configuration
YOLO_MODEL_PATH=Models/yolov8s.tflite
MEDIAPIPE_MODEL_PATH=Models/hand_landmark.tflite
TTS_MODEL_PATH=Models/tts_model.tflite
ENABLE_MODEL_CACHING=true
MODEL_UPDATE_INTERVAL=86400

# Network Configuration
API_BASE_URL=https://api.arlinguasphere.com
CDN_BASE_URL=https://cdn.arlinguasphere.com
WEBSOCKET_URL=wss://ws.arlinguasphere.com
ENABLE_OFFLINE_SYNC=true

# User Experience
ENABLE_HAPTIC_FEEDBACK=true
ENABLE_SOUND_EFFECTS=true
ENABLE_ANIMATIONS=true
ANIMATION_SPEED=1.0
UI_SCALE_FACTOR=1.0

# Advanced Features
ENABLE_CLOUD_ANCHORS=true
ENABLE_OCCLUSION_DETECTION=true
ENABLE_LIGHT_ESTIMATION=true
ENABLE_PLANE_DETECTION=true
MAX_TRACKED_IMAGES=10